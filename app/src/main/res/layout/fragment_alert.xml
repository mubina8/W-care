<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AlertFragment"
    android:background="@drawable/pregnancybg">


    <TextView
        android:id="@+id/normalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="131dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="How many Days is your usual cycle?"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normalTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pick the Starting date of your period"
        android:textSize="16sp" />

    <Button
        android:id="@+id/datePickerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="107dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Show Date Picker" />


    <TextView
        android:id="@+id/pickedDateTextView"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="21dp"

    android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/datespinner"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/normalTextView" />

    <TextView
        android:id="@+id/cycleTextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/normalTextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ovulationTextView"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cycleTextViewId"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp" />

</RelativeLayout>