<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpic"
    tools:context=".SignIn">

    <ProgressBar
        android:id="@+id/progressBarin"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="359dp"
        android:background="@drawable/text_round"
        android:elevation="5dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="213dp"
        android:id="@+id/wcare"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="586dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="W-care"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userNameEditTxt"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_above="@+id/userpasseditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/round_button"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#BE79DF" />

    <EditText
        android:id="@+id/userpasseditText"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_above="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/round_button"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#BE79DF"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="242dp"
        android:background="@drawable/text_round"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sign in"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/regtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="195dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="New User? Sign up here!"
        android:textColor="#BE79DF" />




</RelativeLayout>